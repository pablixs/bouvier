                                        <form class="w-4/5" method="post" action="/admin/crear"
                                            enctype="multipart/form-data">
                                            <div class="mb-6">
                                                <label for="nombre"
                                                    class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Nombre
                                                    del producto</label>
