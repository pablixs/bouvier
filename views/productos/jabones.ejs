<%- include('../templates/headProductos') %> 
        <div class="container my-12 mx-auto px-4 md:px-12">
            <div class="flex flex-wrap -mx-1 lg:-mx-4">
            <% for(let producto = 0; producto < productos.length; producto++) { %> 
                    <div class="my-[1.25rem] px-1 w-full md:w-2/2 lg:my-4 lg:px-4 lg:w-1/3 carditem">
                        <article class="overflow-hidden rounded-lg shadow-lg bg-mainLight">
                            <img alt="Placeholder" class="block h-[220px] w-full object-cover" src="/images/productos/subidosporweb/<%=productos[producto].imagen%>">
                            <header class="flex items-center justify-between leading-tight p-2 md:p-4">
                                <!-- <span class="text-lg">
                                    
                                </span> -->
                                <span class="text-grey-darker text-xl">
                                    <%=productos[producto].nombre %>
                                    
                                </span>
                            </header>
                            <footer class="flex items-center justify-between leading-none p-2 md:p-4">
                                <a class="flex items-center no-underline hover:underline text-black" href="#">
                                    <span class="ml-2 text-lg">
                                        $<%= productos[producto].precio %> 
                                    </span>
                                </a>
                                <a class="no-underline text-grey-darker hover:text-red-dark" href="#">
                                    <form class="form-inline" method="get" action="./jabones/<%-productos[producto].id %>">
                                        <button class="p-2.5 border-solid border-[1px] border-marronDark text-marronDark hover:bg-marronDark hover:text-mainLight" type="submit">Ver producto</button>
